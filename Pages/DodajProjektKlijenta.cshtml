@page
@model TBP_enterprises.Pages.DodajProjektKlijentaModel
@{
    ViewData["Title"] = "Dodaj projekt klijenta";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="klijent">Klijent:</label>
        <select id="klijent" name="ProjektKlijenta.Id_klijent" class="custom-dropdown" required>
            <option value="">Odaberite klijenta</option>
            @foreach (var klijent in Model.Klijenti)
            {
                <option value="@klijent.Id">@klijent.Naziv_klijenta</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="projekt">Projekt:</label>
        <select id="projekt" name="ProjektKlijenta.Id_projekt" class="custom-dropdown" required>
            <option value="">Odaberite projekt</option>
            @foreach (var projekt in Model.Projekti)
            {
                <option value="@projekt.Id">@projekt.Naziv</option>
            }
        </select>
    </div>
    <div class="form-buttons">
        <button type="submit" class="btn btn-green">Dodaj</button>
        <a href="/ProjektiKlijenata" class="btn btn-red">Odustani</a>
    </div>
</form>
