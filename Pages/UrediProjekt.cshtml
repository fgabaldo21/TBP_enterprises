@page "{id:int}"
@model TBP_enterprises.Pages.UrediProjektModel
@{
    ViewData["Title"] = "Uređivanje projekta";
}

<h1>@ViewData["Title"]</h1>

<div class="form-container">
    <form method="post">
        <div class="form-group">
            <label for="naziv">Naziv projekta:</label>
            <input type="text" id="naziv" name="Naziv" value="@Model.Projekt.Naziv" required />
        </div>
        <div class="form-group">
            <label for="pocetak">Početak projekta:</label>
            <input type="date" id="pocetak" name="Datum_pocetka" value="@Model.Projekt.Datum_pocetka?.ToString("yyyy-MM-dd")" required />
        </div>
        <div class="form-group">
            <label for="zavrsetak">Završetak projekta:</label>
            <input type="date" id="zavrsetak" name="Datum_zavrsetka" value="@Model.Projekt.Datum_zavrsetka?.ToString("yyyy-MM-dd")" />
        </div>
        <div class="form-buttons">
            <button type="submit" class="btn btn-green">Spremi promjene</button>
            <button type="submit" formaction="?handler=Obrisi" formmethod="post" class="btn btn-red">Obriši</button>
            <a href="/Projekti" class="btn btn-blue">Odustani</a>
        </div>
    </form>
</div>